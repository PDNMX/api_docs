                    "fechaResolucion" : {
                      "type" : "string",
                      "format" : "date",
                      "description" : "Fecha en la que se emite la resolución sancionatoria. Fecha en formato ISO 8601",
                      "example" : "2018-05-21"
                    }
                  }
                },
                "multa" : {
                  "type" : "object",
                  "required" : [ "monto", "moneda" ],

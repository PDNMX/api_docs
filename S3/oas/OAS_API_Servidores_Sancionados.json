                      },
                      "tipo" : {
                        "type" : "string",
                        "description" : "Tipo de documento, Valores permitidos [\"RESOLUCION\", \"CONSTANCIA_SANCION\", \"CONSTANCIA_INHABILITACION\", \"CONSTANCIA_ABSTENCION\"]",
                        "enum" : [ "RESOLUCION", "CONSTANCIA_SANCION", "CONSTANCIA_INHABILITACION", "CONSTANCIA_ABSTENCION" ],
                        "example" : "CONSTANCIA_SANCION"
                      },
                      "titulo" : {
                        "type" : "string",
                        "description" : "Título del documento",
                        "example" : "Constancia de sanción..."
                      },
                      "descripcion" : {
                        "type" : "string",
                        "description" : "Descripción del documento",
                        "example" : "Descripción del documento"
                      },
                      "url" : {
                        "type" : "string",
                        "description" : "Hipervínculo al documento",
                        "example" : "https://ejemplo.mx/archivo/documento.pdf"
                      },
                      "fecha" : {
                        "type" : "string",
                        "format" : "date",
                        "description" : "Fecha del documento. Fecha en formato ISO 8601",
                        "example" : "2019-11-20"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },

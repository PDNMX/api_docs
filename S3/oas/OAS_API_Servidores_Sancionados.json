                  "items" : {
                    "type" : "object",
                    "required" : [ "id", "titulo", "descripcion", "url", "fecha" ],
                    "properties" : {
                      "id" : {
                        "type" : "string",
                        "description" : "Puede ser el folio del documento o al menos un consecutivo para identificar a los documentos en el registro.",
